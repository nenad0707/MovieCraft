@page "/"

<PageTitle>Home</PageTitle>

<div class="container-fluid home-container">
    <div class="row">
        <!-- MovieDetails - 50% za desktop -->
        <div class="col-lg-6 col-md-12 movie-details-container">
            @if (selectedMovie != null)
            {
                <MovieDetails Movie="selectedMovie" />
            }
        </div>

        <!-- Carousel - 50% za desktop -->
        <div class="col-lg-6 col-md-12 carousel-container">
            <Carousel OnMovieSelected="OnMovieSelected" />
        </div>
    </div>
</div>

@code {
    private MovieDto? selectedMovie;

    void OnMovieSelected(MovieDto movie)
    {
        selectedMovie = movie;
    }
}
