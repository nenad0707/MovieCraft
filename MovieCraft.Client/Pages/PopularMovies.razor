@page "/popular-movies"
@using MovieCraft.Shared.DTOs
@implements IDisposable
@inject PopularMoviesState PopularMoviesState
@inject BackgroundState BackgroundState

<h3>Popular Movies</h3>

@if (PopularMoviesState.PopularMovies == null)
{
    <p>Loading movies...</p>
}
else if (!PopularMoviesState.PopularMovies.Any())
{
    <p>No popular movies found.</p>
}
else
{
    <div class="movies-grid">
        @foreach (var movie in PopularMoviesState.PopularMovies)
        {
            <link rel="preload" as="image" href="@($"https://image.tmdb.org/t/p/w1280{movie.BackdropPath}")" />
            /*
            <link rel="preload" as="image" href="@($"https://image.tmdb.org/t/p/w342{movie.PosterPath}")" /> 
            */
            <div class="movie-card" @onclick="() => SetBackground(movie.BackdropPath)">
                <img src="@($"https://image.tmdb.org/t/p/w342{movie.PosterPath}")" alt="@movie.Title" class="movie-poster" loading="lazy" />
                <div class="movie-details">
                    <h4>@movie.Title</h4>
                    <p class="release-date">@movie.ReleaseDate?.ToShortDateString()</p>
                    <p class="movie-overview">@movie.Overview</p>
                </div>
            </div>
        }
    </div>
}



@code {
    private IEnumerable<MovieDto>? movies;

    protected override void OnInitialized()
    {
        PopularMoviesState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        PopularMoviesState.OnChange -= StateHasChanged;
    }

    private void SetBackground(string backdropPath)
    {
        BackgroundState.BackgroundImageUrl = $"https://image.tmdb.org/t/p/w1280{backdropPath}";
    }
}
